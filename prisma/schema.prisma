generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Repository {
  id          Int      @id @default(autoincrement())
  github_id   Int      @unique
  name        String
  owner_name  String
  description String
  stars_count Int
  language    String
  created_at  DateTime
  updated_at  DateTime
  pushed_at   DateTime

  @@map("repositories")
}
